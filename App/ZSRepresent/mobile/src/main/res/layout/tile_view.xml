<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="20dp"
    android:layout_width="330dp"
    android:layout_height="150dp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/tileLayout"
    android:gravity="center_horizontal"
    android:background="@color/congress">

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="99dp"
    android:orientation="horizontal">

        <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
            android:id="@+id/repImage"
        />

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nancy Pelosi"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
                android:id="@+id/nameText"
            />

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp">
                <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/linkButtonText"
                    android:id="@+id/emailButton"
                />

                <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="web"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/linkButtonText"
                    android:id="@+id/webButton"
                />
            </LinearLayout>

        </LinearLayout>

        <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
            android:id="@+id/partyImage"
        />
    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_marginLeft="0dp">

        <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@mipmap/twitter"
        android:layout_marginLeft="10dp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/twiteText"
            android:id="@+id/twitterDate"
        android:text="Feb 1"/>

    </LinearLayout>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="10dp"
    android:layout_marginLeft="10dp"
    android:textColor="@color/twiteText"
        android:id="@+id/twitterContent"
    android:text="Gung Hay Fay Choy! Honoring Year of the Monkey #SF's beautiful diversity at @MayorEdLeeâ€™s Lunar NY celebration!"
        />



</LinearLayout>