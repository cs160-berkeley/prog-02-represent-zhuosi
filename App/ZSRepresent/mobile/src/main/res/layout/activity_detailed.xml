<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/congress"
    android:layout_marginTop="25dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/repImage"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nancy Pelosi"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/repName"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/linkButtonText"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="web"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/linkButtonText"
                        />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/partyImage"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term ends: 5/16/2016"
            android:layout_gravity="center_horizontal"
            android:id="@+id/termEnds"
            />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@color/billText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill record :"
                android:textColor="@color/billTitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Tea Tax"
                android:id="@+id/billText"
                android:layout_marginLeft="10dp"
                android:textColor="@color/billEntry"
                android:maxLines = "3"
                android:scrollbars = "vertical"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/billText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Committee :"
            android:textColor="@color/billTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="260dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Education Committee"
            android:layout_marginTop="10dp"
            android:id="@+id/comText"
            android:maxLines = "3"
            android:scrollbars = "vertical"
            android:textColor="@color/billEntry"/>

    </LinearLayout>

</LinearLayout>