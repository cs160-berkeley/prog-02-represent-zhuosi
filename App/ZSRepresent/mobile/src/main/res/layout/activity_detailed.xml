<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/congress"
    android:layout_marginTop="25dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/repImage"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nancy Pelosi"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/repName"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/linkButtonText"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="web"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/linkButtonText"
                        />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/partyImage"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term ends: 5/16/2016"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@color/billText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill record :"
                android:textColor="@color/billTitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Tea Tax"
                    android:textColor="@color/billEntry"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="1/19/2016"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Solar Power Tax Cuts"
                    android:textColor="@color/billEntry"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="1/16/2016"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Window Tax"
                    android:textColor="@color/billEntry"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="12/16/2015"/>
            </LinearLayout>
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/dropdown_arrow"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/billText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Committee :"
            android:textColor="@color/billTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="260dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Education Committee"
            android:layout_marginTop="10dp"
            android:textColor="@color/billEntry"/>

        <TextView
            android:layout_width="260dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Energy Conservation Committee"
            android:layout_marginTop="10dp"
            android:textColor="@color/billEntry"/>


        <TextView
            android:layout_width="260dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="International Trade Committee"
            android:layout_marginTop="10dp"
            android:textColor="@color/billEntry"/>

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/dropdown_arrow" />
    </LinearLayout>

</LinearLayout>