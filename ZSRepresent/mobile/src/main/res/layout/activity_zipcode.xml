<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.cs260.zhuosi.vote.ZipcodeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcom to VOTE!\nFind your representitives by\n entering the ZIP code :"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="please enter your text"
        android:id="@+id/zipText"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
       />

    <Button
        android:id="@+id/confirmButton"
        android:layout_height="wrap_content"
        android:text="Look up"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@color/redButton"
        android:textColor="@color/buttonText"
        android:layout_width="150dp"/>




</LinearLayout>